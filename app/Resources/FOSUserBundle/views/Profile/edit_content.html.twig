{% trans_default_domain 'FOSUserBundle' %}

<div class="panel panel-default" >
    <div class="panel-heading">Personal informations</div>
    <div class="panel-body">
        {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
        <div class="w3-padding row">

                <div  class="col-lg-3 col-md-3 col-xs-6">
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username) }}
                </div>
                <div class="col-lg-3 col-md-3 col-xs-6">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>

                <div  class="col-lg-3 col-md-3 col-xs-6">
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname) }}
                </div>
                <div class="col-lg-3 col-md-3 col-xs-6">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
        </div>

        <div class="w3-padding row">
            <div  class="col-lg-6 col-md-6 col-xs-6">
                {{ 'trav.location'|trans }}
                {{ form_widget(form.address) }}
            </div>
            <div class="col-lg-3 col-md-3 col-xs-6">
                {{ 'trav.birthdate'|trans }}
                {{ form_widget(form.birthdate) }}
            </div>
            <div class="col-lg-3 col-md-3 col-xs-6">
                {{ 'trav.current.password'|trans }}
                {{ form_widget(form.current_password) }}
            </div>
        </div>

        <div class="w3-padding row center-block">
            <input class="btn btn-primary" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
        </div>
       <div class="hidden">
           {{ form_rest(form) }}
       </div>
        {{ form_end(form) }}
    </div>
</div>

